# u16s -- unit type defining features related to u16 but not requiring an
# instance
#
u16s : wrappingIntegers<u16> is

  redef name => "u16"

  redef zero u16 is 0.low16bits  # NYI: should be 'u16 0'
  redef one  u16 is 1.low16bits  # NYI: should be 'u16 1'

  redef min u16 is zero
  redef max u16 is 0xffff.low16bits  # NYI: should be 'u16 0xffff'
