transducertest :transducers is

  exitCode := 0

  chck (b bool, msg string) unit is
    if b
      say "PASSED: $msg"
    else
      say "FAILED: $msg"
      set exitCode := 1

  xf_filter := filter<Sequence<i32>,i32>(x -> x > 3)
  r := (1..5).transduce xf_filter
  chck (r.count == 2) "filter transducer"

  xf_map := map<Sequence<bool>,i32, bool>(x -> x > 3)
  r := (1..5).transduce xf_map
  chck (r.count == 5) "map transducer"

  xf_count := count<bool>
  r := (1..5).map<bool>(x -> false).transduce xf_count 0
  chck (r == 5) "count transducer"

  human(age i32) is
  ages := map<i32, human, i32> (x -> x.age)
  gt_ten := filter<i32, i32> (x -> x > 10)
  xf := (compose (compose ages gt_ten) count<i32>)
  m := [human(4), human(12), human(30)].transduce xf 0
  chck (m == 2) "compose transducers"

  fuzion.std.exit exitCode
