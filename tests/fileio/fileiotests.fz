fileiotests : fuzion.std.fileio =>

  dir := "testdir"
  newdir := "newdir"
  file := dir + "/" + "testfile"

  content := "Hello world 🌍"

  f := io.file

  writer := f.write
  reader := f.read
  stats := f.stat

  say "$dir exists: {exists dir}"
  match writer.create_dir dir
    _ unit => say "$dir was created"
    _ error =>
  say "$dir exists: {exists dir}"

  say "$file exists: {exists file}"
  match writer.write_all file content.utf8.asArray
    _ unit => say "$file was created"
    _ error =>
  say "$file exists: {exists file}"

  match stats.size file
    size i64 => say "$file size is $size"
    _ error =>

  match reader.read_all file
    bytes array u8 =>
      filecontent := strings.fromBytes bytes
      say "file content bytes: $bytes"
      say "file content is $filecontent"
    _ error =>

  match f.delete file
    _ unit => say "$file was deleted"
    _ error =>
  say "$file exists: {exists file}"

  say "$dir exists: {exists dir}"
  say "$newdir exists: {exists newdir}"
  match f.move dir newdir
    _ unit => say "$dir is now: $newdir"
    _ error =>
  say "$newdir exists: {exists newdir}"
  say "$dir exists: {exists dir}"

  match f.delete newdir
    _ unit => say "$newdir was deleted"
    _ error =>
  say "$newdir exists: {exists newdir}"
