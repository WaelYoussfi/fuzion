# usage: fz <main-feature>

#!/bin/bash

FZ_CMD=$0
JAVA=java
FUZION_BIN=`dirname "$0"`
FUZION_HOME="$FUZION_BIN/.."
FUZION_CLASSES="$FUZION_HOME/classes"

$JAVA -Xss3m -cp "$FUZION_CLASSES" -Dfuzion.command=$FZ_CMD dev.flang.tools.Fusion "$@"
